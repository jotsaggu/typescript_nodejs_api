{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true, 
        "sourceMap": true
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],   
    "exclude": [
        "node_modules"
    ]
}
